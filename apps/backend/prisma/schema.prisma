generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// Define the enums
enum RoomType {
ACROOM
NOACROOM
}

enum Roles{
ADMIN
USER
}

// Define the models
model Hotel {
id       String   @id @default(uuid())
name     String
address  String
contact  String
email    String
rooms    Room[]
reviews  Review[]
}

model Review {
id        String   @id @default(uuid())
comment   String?
star      Int
hotelId   String
hotel     Hotel    @relation(fields: [hotelId], references: [id])
}

model Room {
id        String   @id @default(uuid())
img       String[]
roomId    String
roomType  RoomType
isBooked  Boolean
hotelId   String
hotel     Hotel    @relation(fields: [hotelId], references: [id])
userId    String   @unique
user      User    @relation(fields: [userId], references: [id])
}

//Define User model

model User{

id               String   @id @default(uuid())
name             String   @unique
email            String   @unique
password         String
isEmailVerified  Boolean @default(false)
isActive         Boolean @default(false)
isArchive        Boolean @default(false)
roles            Roles[] @default([USER])
created_by      String     @default("0")
updated_by      String     @default("0")
room             Room?

}


model Auth {
  id    String    @id @default(uuid())
  email String @unique
  otp   String
}